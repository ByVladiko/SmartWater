<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_column="@id/product_item_table"
    android:id="@+id/product_item_table"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TableRow>

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_column="@id/product_item_table"
        android:layout_gravity="center_vertical"
        android:src="@mipmap/ic_launcher" />

    <LinearLayout
        android:id="@+id/text_item"
        android:layout_column="@id/product_item_table"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/text_small_margin"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_name_text_view"
            style="@style/TextView.Primary"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Empty bottle" />

        <TextView
            android:id="@+id/description_text_view"
            style="@style/TextView.Description"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="5 litres" />

        <TextView
            android:id="@+id/cost_text_view"
            style="@style/TextView.Cost"
            android:text="50 RUB" />

    </LinearLayout>

        <Button
            android:id="@+id/addButton"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_column="@id/product_item_table"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/text_small_margin"
            android:background="@drawable/rounded_button"
            android:text="+"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="50sp" />
    </TableRow>
</TableLayout>